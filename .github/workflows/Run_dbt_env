name: Run dbt

on:
  push:
    branches:
      - main

jobs:
  run-dbt:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout code
        uses: actions/checkout@v2

      - name: Set up Python
        uses: actions/setup-python@v2
        with:
          python-version: '3.8'

      - name: Install dbt
        run: |
          pip install dbt

      - name: Run dbt
        env:
          DBT_MY_ENV: ${{ secrets.DBT_MY_ENV }}
        run: |
          dbt run
